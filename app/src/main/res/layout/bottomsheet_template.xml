<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="30dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/i1"
			android:focusable="false"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:padding="13dp"
			android:src="@drawable/ic_report_problem_grey"
			android:scaleType="fitXY"/>
		<LinearLayout
			android:id="@+id/bg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical"
			android:translationY="-30.0dp">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="3dp"
				android:padding="8dp"
				android:background="#016DE7"
				android:orientation="horizontal"/>
			<TextView
				android:id="@+id/t1"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="17dp"
				android:layout_marginTop="47dp"
				android:layout_marginRight="17dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Nothing found !"
				android:textSize="16sp"
				android:textColor="#212121"/>
			<TextView
				android:id="@+id/t2"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="17dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="17dp"
				android:layout_marginBottom="10dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="It's seemed like you don't have any project to show &amp; edit, try to add a new project !"
				android:textSize="14sp"
				android:textColor="#9E9E9E"/>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="17dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/b1"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="12dp"
					android:background="#F5F5F5"
					android:gravity="center_horizontal|center_vertical"
					android:text="Exit"
					android:textSize="14sp"
					android:textColor="#616161"
					android:layout_weight="1"/>
				<LinearLayout
					android:id="@+id/linear4"
					android:layout_width="17dp"
					android:layout_height="0dp"
					android:padding="8dp"
					android:orientation="vertical"/>
				<TextView
					android:id="@+id/b2"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="12dp"
					android:background="#016DE7"
					android:gravity="center_horizontal|center_vertical"
					android:text="Uninstall Now"
					android:textSize="14sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
